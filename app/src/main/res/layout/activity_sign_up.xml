<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBlue"
    android:orientation="vertical"
    android:weightSum="12"
    tools:context=".MainActivity"


    >


    <TextView
        android:id="@+id/title"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:padding="5dp"
        android:text="Create a new account"
        android:textAlignment="center"
        android:textColor="#f6c502"
        android:textSize="30sp"
        android:typeface="serif"

        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >


            <EditText
                android:id="@+id/name"
                android:layout_width="300dp"
                android:layout_height="45dp"

                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/round_white"
                android:drawableLeft="@drawable/user"
                android:drawablePadding="5dp"
                android:hint="Name"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:textColorHint="#413f3f"
                android:textSize="15dp"
                android:typeface="serif" />


            <LinearLayout
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp">

                <RadioGroup
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_white"
                    android:backgroundTint="#50fcfbfb"
                    android:orientation="horizontal"
                    android:paddingRight="10dp"

                    >

                    <RadioButton
                        android:id="@+id/male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Male"

                        />

                    <RadioButton
                        android:id="@+id/female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female"

                        />
                </RadioGroup>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/identity"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/gender"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp">

                <RadioGroup
                    android:id="@+id/catagory"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_white"
                    android:backgroundTint="#50fcfbfb"
                    android:orientation="horizontal"

                    >

                    <RadioButton
                        android:id="@+id/student"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Student"

                        />

                    <RadioButton
                        android:id="@+id/cr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CR"

                        />

                    <RadioButton
                        android:id="@+id/teacher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Teacher" />

                    <RadioButton
                        android:id="@+id/staff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Staff" />
                </RadioGroup>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/departmentlayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/identity"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimaryDark"
                android:orientation="horizontal">

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="#ffff">

                    <Spinner
                        android:id="@+id/unit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Spinner>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="#ffff">

                    <Spinner
                        android:id="@+id/department"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </Spinner>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/yearlayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/departmentlayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@color/colorPrimaryDark"
                android:orientation="horizontal">

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="#ffff">

                    <Spinner
                        android:id="@+id/year"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Spinner>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="#ffff">

                    <Spinner
                        android:id="@+id/semester"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Spinner>
                </LinearLayout>


            </LinearLayout>







            <LinearLayout
                android:id="@+id/shortNameLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/yearlayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@color/colorPrimaryDark"
                android:orientation="horizontal">

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="#ffff">

                    <Spinner
                        android:id="@+id/shortName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:entries="@array/TeacherCSE"
                        >

                    </Spinner>
                </LinearLayout>



            </LinearLayout>


            <EditText
                android:id="@+id/roll"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_below="@+id/shortNameLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_white"
                android:drawableLeft="@drawable/user"
                android:drawablePadding="5dp"
                android:hint="Roll"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:textColorHint="#413f3f"
                android:textSize="15dp"
                android:typeface="serif" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_below="@+id/roll"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_white"
                android:drawableLeft="@drawable/user"
                android:drawablePadding="5dp"
                android:hint="Phone number"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:textColorHint="#413f3f"
                android:textSize="15dp"
                android:typeface="serif" />


            <EditText
                android:id="@+id/email"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_below="@+id/phone"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_white"
                android:drawableLeft="@drawable/user"
                android:drawablePadding="5dp"
                android:hint="Email"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:textColorHint="#413f3f"
                android:textSize="15dp"
                android:typeface="serif" />


            <EditText
                android:id="@+id/pass"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_below="@+id/email"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_white"
                android:drawableLeft="@drawable/pass"
                android:drawablePadding="5dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:textColorHint="#413f3f"
                android:textSize="15dp"
                android:typeface="serif" />


        </RelativeLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        >

        <Button
            android:id="@+id/signUp"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@drawable/semi_round"
            android:backgroundTint="#fdea01"
            android:text="SignUp"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold"
            android:typeface="serif"
            android:layout_gravity="center"
            />

    </LinearLayout>

</LinearLayout>